<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/main_testMode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_mode"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/main_testAPP_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_testMode_title"
        android:layout_below="@+id/main_testMode_title"
        android:text="@string/test_app"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/main_testAPP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_testDuration_title"
        android:layout_alignLeft="@+id/main_testMode"
        android:text="@string/main_default_display"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/main_testInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_testInterval_title"
        android:layout_alignBottom="@+id/main_testInterval_title"
        android:layout_alignLeft="@+id/main_testDuration"
        android:text="@string/main_default_display"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_testInterval_title"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:text="@string/main_tips" />

    <TextView
        android:id="@+id/main_testMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_testAPP"
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@+id/main_testDuration_title"
        android:text="@string/main_default_display"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/main_testDuration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_testAPP_title"
        android:layout_below="@+id/main_testAPP_title"
        android:layout_marginTop="22dp"
        android:text="@string/test_duration"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/main_endTest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_testDuration"
        android:layout_alignLeft="@+id/main_testDuration_title"
        android:text="@string/main_endTest_title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/main_testInterval_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_testDuration_title"
        android:layout_below="@+id/main_testDuration_title"
        android:text="@string/test_interval"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/main_endTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_testDuration"
        android:layout_alignLeft="@+id/main_testAPP"
        android:text="@string/main_default_display"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/main_testDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_testDuration_title"
        android:layout_alignBottom="@+id/main_testDuration_title"
        android:layout_alignLeft="@+id/main_endTest"
        android:text="@string/main_default_display"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_startTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView9"

        android:layout_marginBottom="65dp"
        android:layout_centerHorizontal="true"
        android:onClick="startTest"
        android:text="@string/button_startTest" />

    <Button
        android:id="@+id/button_viewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView9"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="viewResult"
        android:text="@string/button_viewResult" />

</RelativeLayout>